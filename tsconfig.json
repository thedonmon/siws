{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "lib": ["es5", "es2015", "es2016", "esnext"],
      "types": ["node", "jest"],
      "module": "es2015",
      "moduleResolution": "node",
      "outDir": "dist/esm",
      "sourceMap": true,
      "target": "es6"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
